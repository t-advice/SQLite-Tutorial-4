<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorial4.MainPage"
             Title="Image Gallery">

    <VerticalStackLayout Padding="12" Spacing="10">

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Capture Photo" Clicked="OnCapturePhotoClicked" />
            <Button Text="Pick Photo" Clicked="OnPickPhotoClicked" />
        </HorizontalStackLayout>

        <CollectionView x:Name="ImagesCollection"
                        ItemsLayout="VerticalGrid, 3"
                        SelectionMode="None"
                        HeightRequest="700">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="4" CornerRadius="8" HasShadow="False" BorderColor="#ddd" Margin="4">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImageTapped" NumberOfTapsRequired="1" />
                        </Frame.GestureRecognizers>

                        <Image Source="{Binding FilePath}" Aspect="AspectFill" HeightRequest="120" WidthRequest="120" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>

